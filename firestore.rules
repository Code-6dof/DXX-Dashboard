rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /games/{gameId} {
      allow read: if true;
      allow write: if false;
    }
    match /players/{playerId} {
      allow read: if true;
      allow write: if false;
    }
    match /meta/{docId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
